@using Entities.ViewModels
@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Login-Register.css" rel="stylesheet" />
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/jquery.js"></script>
<style>
    .validation-summary-errors {
        border: 2px dotted red;
        background-color: red;
        border-radius: 8px;
    }

        .validation-summary-errors ul {
            list-style-type: none;
            padding: 10px
        }
</style>
<body>
    @using (Html.BeginForm())
    {

        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 mx-auto">
                    <div id="first">
                        <div class="myform form ">
                            <div class="logo mb-3">
                                <div class="col-md-12 text-center">
                                    <h1>Kayıt Formu</h1>
                                </div>
                                @Html.ValidationSummary(false)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name)
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adınızı Giriniz" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Surname)
                                @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Soyadınızı Giriniz" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-Mail Adresinizi Giriniz" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName)
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Giriniz" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password)
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifrenizi Giriniz", type = "password" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.RePassword)
                                @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifrenizi Tekrar Giriniz", type = "password" })
                            </div>
                            <div class="form-group">
                                <p class="text-center">Gizlilik Politikamız <a href="#">Kullanım Şartları</a></p>
                            </div>
                            <div class="col-md-12 text-center ">
                                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Giriş</button>
                            </div>
                            <hr />



                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</body>

<script>


</script>



