@using Entities.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Register";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Login-Register.css" rel="stylesheet" />
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/jquery.js"></script>
<style>
    .validation-summary-errors {
        border: 2px dotted red;
        background-color: red;
        border-radius: 8px;
    }

        .validation-summary-errors ul {
            list-style-type: none;
            padding: 10px
        }
</style>
<body>
    @using (Html.BeginForm())
    {

        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 mx-auto">
                    <div id="first">
                        <div class="myform form ">
                            <div class="logo mb-3">
                                <div class="col-md-12 text-center">
                                    <h1>Giriş</h1>
                                </div>
                            </div>
                            @Html.ValidationSummary(false)

                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName)
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Giriniz" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password)
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifrenizi Giriniz", type = "password" })
                            </div>
                            <div class="form-group">
                                <p class="text-center">By signing up you accept our <a href="#">Terms Of Use</a></p>
                            </div>
                            <div class="col-md-12 text-center ">
                                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Giriş</button>
                            </div>
                            <hr />
                            <div class="form-group">
                                <p class="text-center">Don't have account? <a href="#" id="signup">Sign up here</a></p>
                            </div>


                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</body>

<script>
    $(function () {
        $("footer").parent().hide();
    }




    );
</script>

